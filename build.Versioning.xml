<?xml version="1.0" encoding="UTF-8"?>
	<project name="Versioning" default="Version-UNIT" basedir="." >
	<target name="Version-UNIT">
		<echo>${build.number}</echo>
		<echo>${DSTAMP}</echo>
		<echo>${TSTAMP}</echo>
		<echo>${TODAY}</echo>
		<echo>${release.date}</echo>
		
		<echo file="CB.Version">num=${build.number}${line.separator}</echo>
		<echo file="CB.Version" append="true">date=${release.date}</echo>
		
	</target>
	
	
	<buildnumber file="CheckBook.build.number"/>
	<tstamp>
		<format property="release.date" pattern="yyyy-MM-dd" />
	</tstamp>
</project>
